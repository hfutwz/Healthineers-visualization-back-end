<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.PatientInfoOnAdmissionMapper">

    <!-- 根据患者ID查询入室前信息（如果有多条记录，返回最新的一条） -->
    <select id="selectByPatientId" parameterType="java.lang.Integer" resultType="com.demo.entity.PatientInfoOnAdmission">
        SELECT * FROM patient_info_on_admission WHERE patient_id = #{patientId} ORDER BY id DESC LIMIT 1
    </select>

</mapper>
